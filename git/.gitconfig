# ─── Include local config (user.name, email) ─────────────
[include]
    path = ~/.gitconfig.local

# ─── Core ─────────────────────────────────────────────────
[init]
    defaultBranch = main

[core]
    editor = nvim
    excludesfile = ~/.gitignore_global
    pager = delta

# ─── Delta (diff pager) ─────────────────────────────────
[delta]
    navigate = true
    side-by-side = true
    line-numbers = true

[interactive]
    diffFilter = delta --color-only

# ─── Push / Pull / Fetch ─────────────────────────────────
[push]
    default = current

[pull]
    rebase = true

[fetch]
    prune = true

# ─── Merge / Rebase ──────────────────────────────────────
[merge]
    conflictstyle = zdiff3

[rebase]
    autoStash = true

[rerere]
    enabled = true

# ─── Diff ─────────────────────────────────────────────────
[diff]
    algorithm = histogram
    colorMoved = default

# ─── Branch ───────────────────────────────────────────────
[branch]
    sort = -committerdate
